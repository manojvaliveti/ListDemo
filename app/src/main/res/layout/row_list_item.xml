<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textVwName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_size_22" />

        <TextView
            android:id="@+id/textVwDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVwName"
            android:layout_toLeftOf="@+id/imgVwPicture"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_16" />

        <ImageView
            android:id="@+id/imgVwPicture"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/textVwName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/imgVwIconNext" />

        <ImageView
            android:id="@+id/imgVwIconNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

</android.support.v7.widget.CardView>